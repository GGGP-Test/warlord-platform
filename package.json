{
  "name": "warlord-platform",
  "version": "1.0.0",
  "description": "WARLORD Supplier Intelligence Platform - Unified Monorepo",
  "private": true,
  "workspaces": [
    "functions"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "dev:functions": "cd functions && npm run serve",
    "build:functions": "cd functions && npm run build",
    "deploy": "npm run build && npm run build:functions && firebase deploy",
    "deploy:hosting": "npm run build && firebase deploy --only hosting",
    "deploy:functions": "npm run build:functions && firebase deploy --only functions",
    "emulators": "firebase emulators:start"
  },
  "dependencies": {
    "next": "^14.2.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "firebase": "^10.12.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.0"
  },
  "devDependencies": {
    "eslint": "^8",
    "eslint-config-next": "14.2.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
